# ========================
# Database Configurations
# ========================

# PostgreSQL
POSTGRES_HOST="localhost"
POSTGRES_PORT="5432"
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="your_postgres_password"
POSTGRES_DB="database_name"
POSTGRES_URL="postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}"

# MySQL (WordPress)
MYSQL_HOST="localhost"
MYSQL_PORT="3306"
MYSQL_USER="wp_admin"
MYSQL_PASSWORD="your_mysql_password"
MYSQL_NAME="wordpress_db"
MYSQL_ROOT_PASSWORD="your_mysql_root_password"
MYSQL_URL="mysql://${MYSQL_USER}:${MYSQL_PASSWORD}@${MYSQL_HOST}:${MYSQL_PORT}/${MYSQL_NAME}"

# MongoDB (New)
MONGO_PORT="27017"
MONGO_ROOT_USER="root"
MONGO_ROOT_PASSWORD="your_mongo_root_password"
MONGO_DB="app_database"
MONGO_USER="app_user"
MONGO_PASSWORD="your_mongo_password"
MONGO_URL="mongodb://${MONGO_USER}:${MONGO_PASSWORD}@${MONGO_HOST}:${MONGO_PORT}/${MONGO_DB}?authSource=admin"

# Redis
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD="your_redis_password"

# ========================
# WordPress Integration
# ========================
DB_PREFIX="wp_"
API_BASE_URL="https://yourdomain.com/wp-json/wp/v2"
API_SECRET="your_api_secret"

# ========================
# Application Settings
# ========================
NODE_ENV="development"
NUXT_PUBLIC_SITE_URL="http://localhost:3000"
NUXT_SESSION_PASSWORD="generate_with: openssl rand -base64 32"

# Production only variables (uncomment and configure for production)
